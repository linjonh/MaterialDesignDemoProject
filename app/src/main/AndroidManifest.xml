<manifest package="com.jaysen.mddp"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".TextInputLayoutActivity"
            android:label="@string/title_activity_text_input_layout">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="com.jaysen.example.MDDP"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".NavigationViewActivity"
            android:label="@string/title_activity_navigation_view">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="com.jaysen.example.MDDP"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ToolbarNavigationView"
            android:label="@string/title_activity_toolbar_navigation_view"
            android:theme="@style/FitSystemWindowsTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="com.jaysen.example.MDDP"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".AppBarLayoutActivitiy"
            android:label="@string/title_activity_app_bar_layout_activitiy"
            android:theme="@style/FitSystemWindowsTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="com.jaysen.example.MDDP"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".CollapsingToolbarLayoutActivity"
            android:label="@string/title_activity_collapsed_layout"
            android:parentActivityName=".MainActivity"
            android:theme="@style/FitSystemWindowsTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="com.jaysen.example.MDDP"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
